<h3>Assets</h3>
<div class="card col-md-3">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Currency</th>
      <th>Amount</th>
    </tr>
    </thead>
    <tbody>
    <% @assets.each do |k,v| %>
      <tr>
        <td><%= k.upcase %></td>
        <td><%= v %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


